<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.swjtuhc.demo.mapper.DiscussMapper">
		<insert id="addcontent" parameterType="edu.swjtuhc.demo.model.Discuss">
		intsert into comment
		(username,content,favour)
		values
		(#{username},#{content},#{favour})
		
		
		</insert>
		<select id="selectusername" parameterType="java.lang.String" resultType="edu.swjtuhc.demo.model.Discuss">
		select*from comment
		where
		username = #{username}
	</select>




</mapper>